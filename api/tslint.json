{
    "extends": "tslint:recommended",
    "rules": {
        "semicolon": [true, "never", "ignore-interfaces"],
        "quotemark": [true, "single"],
        "no-var-requires": false,
        "no-unused-expression": false,
        "max-line-length": [
            true,
            { "limit": 80}
        ],
        "typedef": [
            true,
            "call-signature",
            "property-declaration"
        ]
    },
    "jsRules": {}
}
